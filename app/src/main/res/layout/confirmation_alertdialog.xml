<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/alert_message_box"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_30ssp"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:background="@drawable/rounded_border"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

<!--    <TextView-->
<!--        android:id="@+id/alert_title"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Confirmation"-->
<!--        android:textSize="@dimen/_18ssp"-->
<!--        android:textStyle="bold"-->
<!--        android:textColor="@color/black"/>-->

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/alertdialog_anim_icon"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/alert_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to delete?"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:textColor="@color/black"/>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_8sdp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/operation_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            app:cornerRadius="@dimen/_10sdp"
            android:backgroundTint="@color/darkMineShaft"
            android:text="Cancel"
            android:textSize="@dimen/_12ssp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:strokeColor="@color/white"
            android:layout_marginEnd="@dimen/_4sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/operation_done_btn"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/operation_done_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:backgroundTint="@color/darkMineShaft"
            app:cornerRadius="@dimen/_10sdp"
            android:text="Confirm"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_alignParentEnd="true"
            app:layout_constraintStart_toEndOf="@+id/operation_cancel_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>