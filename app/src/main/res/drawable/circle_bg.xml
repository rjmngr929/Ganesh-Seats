<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Circle background color -->
    <solid android:color="@color/black" />

    <!-- Optional: Circle border -->
    <stroke
        android:width="2dp"
        android:color="@color/black" />

    <!-- Optional: padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
